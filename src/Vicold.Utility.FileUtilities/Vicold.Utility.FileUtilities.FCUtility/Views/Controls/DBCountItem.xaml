<UserControl x:Class="Vicold.Utility.FileUtilities.FCUtility.Views.Controls.DBCountItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vicold.Utility.FileUtilities.FCUtility.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="25">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition  Width="80"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="{Binding Title}" HorizontalAlignment="Right" FontWeight="Bold" FontSize="14"/>
        <TextBlock Text="{Binding Count}" Grid.Column="1" FontSize="14"/>
    </Grid>
</UserControl>
