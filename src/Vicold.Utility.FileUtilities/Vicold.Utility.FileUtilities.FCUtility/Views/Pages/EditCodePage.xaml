<Page x:Class="Vicold.Utility.FileUtilities.FCUtility.Views.Pages.EditCodePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vicold.Utility.FileUtilities.FCUtility.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditSourcePage">

    <Grid>
        <StackPanel>
            <Label Content="代码:"/>
            <TextBox x:Name="TxtCode" Margin="5"/>
            
            <Label Content="类型:"/>
            <ComboBox x:Name="CboType" Margin="5"/>

            <Label Content="主演:"/>
            <ComboBox x:Name="CboActor" Margin="5"/>

            <Label Content="是否存在本机:"/>
            <TextBlock x:Name="TxtLocal" Text="是" Margin="5"/>

            <Button x:Name="BtnSubmit" Content="提交" Margin="5" Click="BtnSubmit_Click"/>

        </StackPanel>
    </Grid>
</Page>
