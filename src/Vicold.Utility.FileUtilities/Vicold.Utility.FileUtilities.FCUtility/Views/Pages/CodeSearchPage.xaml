<Page x:Class="Vicold.Utility.FileUtilities.FCUtility.Views.Pages.CodeSearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vicold.Utility.FileUtilities.FCUtility.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CodeSearchPage">

    <StackPanel>

        <Grid Height="40" HorizontalAlignment="Left">
            <TextBlock Text="代码快速搜索" Margin="5" FontSize="16" VerticalAlignment="Center"/>
        </Grid>

        <Grid Height="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="90"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="FastSearchText" Width="auto" Margin="5"/>
            <Button Grid.Column="1" x:Name="FastSearchButton" Style="{DynamicResource ExecuteButtonStyle}" Content="搜索" Margin="5" Width="80" HorizontalAlignment="Right" Click="FastSearchButton_Click"/>
        </Grid>

    </StackPanel>
</Page>
