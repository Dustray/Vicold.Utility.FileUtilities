<Page x:Class="Vicold.Utility.FileUtilities.FCUtility.Views.Pages.EditVideoPathPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vicold.Utility.FileUtilities.FCUtility.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditVideoPathPage">

    <StackPanel>

        <Grid  Height="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="主文件仓库路径" Margin="5" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Button Grid.Column="1" x:Name="MainPathButton" Content="浏览" Margin="5" Width="80" HorizontalAlignment="Right" Click="MainPathButton_Click"/>
        </Grid>

        <TextBox   x:Name="MainPathText" Width="auto" Height="40" Margin="5" />

        <Grid  Height="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="主文件仓库路径" Margin="5" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Button Grid.Column="1" x:Name="SubPathButton" Content="浏览" Margin="5" Width="80" HorizontalAlignment="Right" Click="SubPathButton_Click"/>
        </Grid>

        <TextBox   x:Name="SubPathText" Width="auto" Height="200" Margin="5" TextWrapping="Wrap" AcceptsReturn="True"/>
        <Button  x:Name="SaveButton" Content="保存" Margin="5" Width="80" Height="40" HorizontalAlignment="Center" Click="SaveButton_Click"/>
    </StackPanel>
</Page>
